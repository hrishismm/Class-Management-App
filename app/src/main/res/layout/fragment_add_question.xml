<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddQuestionFragment"
    android:orientation="vertical"
    >

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testing_button"
        android:text="Submit"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/correct_option_text"
        android:layout_marginTop="20dp"

        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/select_standard_spinner"
        android:layout_centerHorizontal="true"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/select_subject_spinner"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/select_standard_spinner"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/question_no_text"
        android:layout_below="@+id/select_subject_spinner"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question_name_text"
        android:layout_below="@+id/question_no_text"
        android:layout_marginTop="20dp"
        android:hint="Enter Question Here"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/option1_text"
        android:layout_below="@+id/question_name_text"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Option 1"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/option2_text"
        android:layout_below="@+id/option1_text"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Option 2"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/option3_text"
        android:layout_below="@+id/option2_text"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Option 3"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/option4_text"
        android:layout_below="@+id/option3_text"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Option 4"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/correct_option_text"
        android:layout_below="@+id/option4_text"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter Correct Option"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testing_text"
        android:layout_toRightOf="@+id/testing_button"
        android:layout_below="@+id/correct_option_text"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>