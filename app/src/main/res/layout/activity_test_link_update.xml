<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestLinkUpdate"
    android:gravity="center_vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Test Link"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:id="@+id/test_link_text"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/std_spinner"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/test_link_text"
        android:layout_marginTop="10dp"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sub_spinner"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/std_spinner"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/link_text"
        android:layout_below="@+id/sub_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:singleLine="true"
        android:hint="Enter link here"
        android:textAlignment="center"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit_link_button"
        android:text="Submit"
        android:layout_below="@+id/link_text"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="50dp"
        />




</RelativeLayout>